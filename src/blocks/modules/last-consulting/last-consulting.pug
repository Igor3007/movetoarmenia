include ../../modules/last-updates/last-updates.pug

mixin last-consulting
    section.section-last-consulting
        .container
            .section-title Консалтинг
            .section-subtitle Юридическая и бухгалтерская консультация 
            .section-main
                .section-main__list
                    .section-main__item: +minicard-c()
                    .section-main__item: +minicard-c()
                    .section-main__item: +minicard-c()

mixin minicard-c
    .minicard
        .minicard__wrp
            .minicard__image
                a(href='/detail.html')
                +picture('/img/405b')

                .minicard__tags
                    ul
                        li  ֏֏֏ - высокая 
                        li  Физ.лица

            .minicard__main
                .minicard__info
                    .minicard__avatar: +bgimage('/img/medicina.jpg')
