mixin page-contacts
    section.section-page-contacts
        .page-contacts
            .container
                .page-contacts__list
                    each item in contacts
                        .page-contacts__item: +card-contacts(item)
                 


mixin card-contacts(data)
    .card-contacts
        .card-contacts__title= data.title
        .card-contacts__link
            each item in data.link
                a(href=item.href)= item.text
        